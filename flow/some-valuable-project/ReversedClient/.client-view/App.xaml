<Application x:Class="ReversedClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ReversedClient"
             StartupUri="ClientLoginWindow.xaml"
			 ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../.properties/LoginTextBox.xaml"/>
                <ResourceDictionary Source="../.properties/PasswordTextBox.xaml"/>
                <ResourceDictionary Source="../.properties/SendMessageTextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

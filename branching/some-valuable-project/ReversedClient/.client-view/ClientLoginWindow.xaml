<Window x:Class="ReversedClient.client_view.ClientLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReversedClient.client_view"
        mc:Ignorable="d"
        Title="ClientLoginWindow" Height="450" Width="400">
    <Grid>
        <TextBox Style="{StaticResource LoginTextBox}" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="{Binding Path=UserDTOdata.Login}" VerticalAlignment="Top" Width="120"/>
        <TextBox Style="{StaticResource PasswordTextBox}" Text="{Binding Path=UserDTOdata.Password}" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="120" MaxLength="16"/>
        <Label Content="Other users will see your login-nickname." HorizontalAlignment="Center" Margin="0,246,0,0" VerticalAlignment="Top"/>
        <Button Content="Sign In" Command="{Binding SignInButtonClickCommand}" HorizontalAlignment="Center" Margin="0,179,0,0" VerticalAlignment="Top" Height="25" Width="60"/>
    </Grid>
</Window>
